<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @schedule %>

<%= form_for @schedule do |f| %>
    <table>
        <tr>
            <th><%= f.label :schedule_name ,"スケジュール名" %></th>
            <td><%= f.text_field :schedule_name %></td>
        </tr>

        <tr>
            <th><%= f.label :start_date ,"開始日" %></th>
            <td><%= f.date_field :start_date %></td>
        </tr>

        <tr>
            <th><%= f.label :end_date ,"終了日" %></th>
            <td><%= f.date_field :end_date %></td>
        </tr>

        <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td><%= f.check_box :allday %></td>
        </tr>

        <tr>
            <th><%= f.label :schedule_memo ,"メモ" %></th>
            <td><%= f.text_area :schedule_memo %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "作成完了"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
    </div>
<% end %>